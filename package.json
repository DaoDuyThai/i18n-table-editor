{
  "name": "i18n-table-editor",
  "displayName": "i18n Table Editor",
  "description": "Display and edit i18n JSON files in a table",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:i18nTableEditor.openTable",
    "onView:i18nTableEditor.sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "i18nTableEditor.openTable",
        "title": "Open i18n Table Editor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "i18nTableEditor",
          "title": "i18n Editor",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "i18nTableEditor": [
        {
          "id": "i18nTableEditor.sidebar",
          "name": "i18n Table",
          "type": "tree"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "typescript": "^4.7.4"
  }
}